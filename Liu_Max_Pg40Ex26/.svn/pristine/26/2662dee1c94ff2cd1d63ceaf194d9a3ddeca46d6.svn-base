package liu_max_pg40ex26;

import javax.swing.JOptionPane;

/**
 *
 * @author Max
 */
public class Liu_Max_Pg40Ex26 {

    /**
     * This program takes in three integers and two doubles. It then displays
     * the average of both sets, a * b % c + a / c, and d + d / 2 + e / 4.
     */
    public static void main(String[] args) {
        String input;
        //prompt for first integer and store it.
        input = JOptionPane.showInputDialog("Enter first integer value.", "Your input = a");
        int a = Integer.parseInt(input);
        //prompt for second integer and store it.
        input = JOptionPane.showInputDialog("Enter second integer value.", "Your input = b");
        int b = Integer.parseInt(input);
        //prompt for third integer and store it.
        input = JOptionPane.showInputDialog("Enter third integer value.", "Your input = c");
        int c = Integer.parseInt(input);
        //prompt for first double and store it.
        input = JOptionPane.showInputDialog("Enter first double value.", "Your input = d");
        double d = Double.parseDouble(input);
        //prompt for second double and store it.
        input = JOptionPane.showInputDialog("Enter second double value.", "Your input = e");
        double e = Double.parseDouble(input);
        //show the average of the integer numbers
        JOptionPane.showMessageDialog(null, "Average of integer numbers is: " + ((a + b + c) / 3));
        //show the average of the double numbers
        JOptionPane.showMessageDialog(null, "Average of double numbers is: " + ((d + e) / 2));
        //show a * b % c + a / c
        JOptionPane.showMessageDialog(null, "a * b % c + a / c is: " + (a * b % c + a / c));
        //show d + d / 2 + e / 4
        JOptionPane.showMessageDialog(null, "d + d / 2 + e / 4 is: " + (d + d / 2 + e / 4));
    }
}
