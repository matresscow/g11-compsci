package liu_max_pg40ex25;

import javax.swing.JOptionPane;

/**
 * This program takes in your first and last name, in old english, then prints
 * it out together to name you with JOptionPanes (pop-up windows).
 */
public class Liu_Max_Pg40Ex25 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        //prompt for last name in a pop-up
        String surName = JOptionPane.showInputDialog("Key in thy sur name.","Ye Olde Box of Texte");
        //prompt for first name in a pop-up
        String givenName = JOptionPane.showInputDialog("Key in thy given name.","Ye Olde Box of Texte");
        //give the name combined
        JOptionPane.showMessageDialog(null, "Thou art named: " + givenName + " " + surName + ".");
    }
}
