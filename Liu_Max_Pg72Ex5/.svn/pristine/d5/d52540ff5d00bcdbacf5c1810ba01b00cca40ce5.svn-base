package liu_max_pg72ex5;

import java.util.Scanner;

/**
 *
 * @author Max
 */
public class Liu_Max_Pg72Ex5 {

    /**
     * This program displays a multiplication table of the number entered and
     * all positive integers up to that number.
     */
    public static void main(String[] args) {
        //Create a scanner
        Scanner keyboard = new Scanner(System.in);
        //prompt to enter a number
        System.out.println("Enter a positive integer to see its multiplication table.");
        //record the number
        long number = keyboard.nextLong();
        //start a for loop starting from one to the number
        for (int slip = 1; slip <= number; slip++) {
            //display the two multipliers and the product.
            System.out.println(number + " x " + slip + " = " + number * slip);
        }
    }
}
