package liu_max_pg72ex4;

/**
 *
 * @author Max
 */
public class Liu_Max_Pg72Ex4 {

    /**
     * This program displays the area and thickness of a stack of paper where
     * it is cut in half and piled into one pile 40 times.
     */
    public static void main(String[] args) {
        //initialize the thickness and area
        double thickness = 0.09, area = 1;
        //run 40 times and double thickness and halve area each time.
        for (int cake = 0; cake < 40; cake++) {
            thickness *= 2;
            area /= 2;
        }
        //print out the final values
        System.out.println("The area is: " + area + " m^2. The thickness is: " + thickness + " mm.");
    }
}
